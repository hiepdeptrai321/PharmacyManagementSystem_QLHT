                    <TableColumn fx:id="colMaPN" prefWidth="176.0" style="-fx-alignment: CENTER;" text="Mã phiếu nhập" />
                    <TableColumn fx:id="colNgayNhap" prefWidth="217.0" style="-fx-alignment: CENTER;" text="Ngày nhập" />
                    <TableColumn fx:id="colNhaCungCap" prefWidth="259.0" text="Nhà cung cấp" />
