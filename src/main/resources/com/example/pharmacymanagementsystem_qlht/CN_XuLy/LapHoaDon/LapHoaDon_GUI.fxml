<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="895.0" prefWidth="1646.0" stylesheets="@../../css/LapHoaDon.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pharmacymanagementsystem_qlht.controller.CN_XuLy.LapHoaDon.LapHoaDon_Ctrl">
    <children>
        <!-- Title -->
        <Label layoutX="40.0" layoutY="21.0" styleClass="title-label" text="LẬP HÓA ĐƠN" />

        <!-- Search and Table Area -->
        <Pane layoutX="40.0" layoutY="66.0" prefHeight="70.0" prefWidth="1104.0" styleClass="search-pane">
            <children>
                <TextField fx:id="txtTimKiem" layoutX="118.0" layoutY="14.0" prefHeight="40.0" prefWidth="972.0" promptText="Nhập tên sản phẩm/hoạt chất ..." />
            <Label layoutX="15.0" layoutY="24.0" text="Tìm sản phẩm: ">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font></Label>
            </children>
        </Pane>

        <!-- Table -->
        <Label layoutX="40.0" layoutY="150.0" styleClass="section-label" text="Chi tiết sản phẩm" />
        <TableView fx:id="tblChiTietHoaDon" layoutX="40.0" layoutY="180.0" prefHeight="686.0" prefWidth="1104.0" styleClass="main-table">
            <columns>
                <TableColumn prefWidth="50.0" text="STT" />
                <TableColumn prefWidth="251.0" text="Tên sản phẩm/Hoạt chất" />
                <TableColumn prefWidth="197.0" text="Đơn giá" />
                <TableColumn prefWidth="129.0" text="Số lượng" />
                <TableColumn prefWidth="113.0" text="Đơn vị" />
                <TableColumn prefWidth="175.0" text="Chiết khấu(%)" />
                <TableColumn prefWidth="187.0" text="Thành tiền" />
            </columns>
        </TableView>

        <!-- Info Panel -->
        <Pane layoutX="1181.0" layoutY="14.0" prefHeight="867.0" prefWidth="451.0" styleClass="info-pane">
            <children>
                <Label layoutX="30.0" layoutY="20.0" styleClass="bold-label" text="THÔNG TIN KHÁCH HÀNG" />
                <Label layoutX="30.0" layoutY="60.0" text="Họ tên khách hàng:">
               <font>
                  <Font size="14.0" />
               </font></Label>
                <TextField fx:id="txtTenKhachHang" layoutX="191.0" layoutY="54.0" prefHeight="27.0" prefWidth="189.0" />
                <Button fx:id="btnTimKhachHang" layoutX="383.0" layoutY="54.0" onAction="#handleTimKhachHang" prefHeight="27.0" prefWidth="40.0" text="Tìm" />

                <Label layoutX="30.0" layoutY="100.0" text="Số điện thoại:">
               <font>
                  <Font size="14.0" />
               </font></Label>
                <TextField fx:id="txtSoDienThoai" layoutX="190.0" layoutY="94.0" prefHeight="27.0" prefWidth="216.0" />

                <Label layoutX="28.0" layoutY="330.0" text="Nhập mã đơn thuốc:">
               <font>
                  <Font size="14.0" />
               </font></Label>
                <TextField fx:id="txtMaDonThuoc" layoutX="196.0" layoutY="327.0" prefHeight="27.0" prefWidth="204.0" />

                <Label layoutX="31.0" layoutY="374.0" text="Ngày kê đơn:">
               <font>
                  <Font size="14.0" />
               </font></Label>
                <DatePicker fx:id="dpNgayKeDon" layoutX="196.0" layoutY="371.0" prefHeight="27.0" prefWidth="204.0" />

                <Label layoutX="30.0" layoutY="471.0" text="Tổng chiết khấu:">
               <font>
                  <Font size="14.0" />
               </font></Label>
                <Label fx:id="lblChietKhauValue" layoutX="195.0" layoutY="470.0" prefHeight="20.0" prefWidth="216.0" styleClass="value-label" text="0 VNĐ" />

                <Label layoutX="30.0" layoutY="502.0" text="Tổng tiền:">
               <font>
                  <Font size="14.0" />
               </font></Label>
                <Label fx:id="lblTongTienValue" layoutX="198.0" layoutY="501.0" prefHeight="20.0" prefWidth="210.0" styleClass="value-label" text="0 VNĐ" />

                <Label layoutX="33.0" layoutY="533.0" text="Thuế (VAT 5%):">
               <font>
                  <Font size="14.0" />
               </font></Label>
                <Label fx:id="lblVATValue" layoutX="199.0" layoutY="532.0" prefHeight="20.0" prefWidth="204.0" styleClass="value-label" text="0 VNĐ" />

                <Label layoutX="34.0" layoutY="605.0" styleClass="bold-label" text="Thành tiền:" />
                <Label fx:id="lblThanhTienValue" layoutX="200.0" layoutY="601.0" prefHeight="30.0" prefWidth="204.0" styleClass="main-value-label" text="0 VNĐ" />

                <Label layoutX="36.0" layoutY="644.0" text="Phương thức thanh toán:">
               <font>
                  <Font size="14.0" />
               </font></Label>
                <ChoiceBox fx:id="cbPhuongThucTT" layoutX="201.0" layoutY="640.0" prefHeight="25.0" prefWidth="204.0" />

                <Pane fx:id="paneTienMat" layoutX="9.0" layoutY="669.0" prefHeight="87.0" prefWidth="414.0">
                    <children>
                        <Label layoutX="30.0" layoutY="10.0" text="Số tiền khách đưa:">
                     <font>
                        <Font size="14.0" />
                     </font></Label>
                        <TextField fx:id="txtSoTienKhachDua" layoutX="191.0" layoutY="4.0" prefHeight="27.0" prefWidth="204.0" />
                        <Label layoutX="30.0" layoutY="40.0" text="Tiền thừa:">
                     <font>
                        <Font size="14.0" />
                     </font></Label>
                        <Label fx:id="lblTienThuaValue" layoutX="191.0" layoutY="40.0" prefHeight="20.0" prefWidth="204.0" styleClass="value-label" text="0 VNĐ" />
                    </children>
                </Pane>

                <Button fx:id="btnDatHang" layoutX="30.0" layoutY="788.0" prefHeight="52.0" prefWidth="189.0" styleClass="print-btn" text="In hóa đơn">
                    <font>
                        <Font size="13.0" />
                    </font>
                </Button>
                <Button fx:id="btnThanhToan" layoutX="240.0" layoutY="788.0" prefHeight="52.0" prefWidth="189.0" styleClass="success-btn" text="Thanh toán">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                </Button>
            </children>
        </Pane>
    </children>
</AnchorPane>
