<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="895" prefWidth="1646.0" stylesheets="@../../css/LapHoaDon.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pharmacymanagementsystem_qlht.controller.CN_XuLy.LapHoaDon.LapHoaDon_Ctrl">
    <children>
        <!-- Title -->
        <Label layoutX="40.0" layoutY="21.0" styleClass="title-label" text="LẬP HÓA ĐƠN" />

        <!-- Search and Table Area -->
        <Pane layoutX="40.0" layoutY="73.0" prefHeight="70.0" prefWidth="741.0" styleClass="search-pane">
            <children>
                <TextField fx:id="txtTimKiem" layoutX="117.0" layoutY="21.0" prefHeight="27.0" prefWidth="599.0" promptText="Nhập tên sản phẩm/hoạt chất ..." />
            <Label layoutX="15.0" layoutY="24.0" text="Tìm sản phẩm: ">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font></Label>
            </children>
        </Pane>

        <!-- Table -->
        <Label layoutX="40.0" layoutY="150.0" styleClass="section-label" text="Chi tiết sản phẩm" />
        <TableView fx:id="tblChiTietHoaDon" layoutX="40.0" layoutY="180.0" prefHeight="506.0" prefWidth="741.0" styleClass="main-table">
            <columns>
                <TableColumn prefWidth="50.0" text="STT" />
                <TableColumn prefWidth="242.0" text="Tên sản phẩm/Hoạt chất" />
                <TableColumn prefWidth="61.0" text="Số lượng" />
                <TableColumn prefWidth="64.0" text="Đơn vị" />
                <TableColumn prefWidth="103.0" text="Đơn giá" />
                <TableColumn prefWidth="88.0" text="Chiết khấu(%)" />
                <TableColumn prefWidth="131.0" text="Thành tiền" />
            </columns>
        </TableView>

        <!-- Info Panel -->
        <Pane layoutX="820.0" layoutY="17.0" prefHeight="672.0" prefWidth="368.0" styleClass="info-pane">
            <children>
                <Label layoutX="30.0" layoutY="20.0" styleClass="bold-label" text="THÔNG TIN KHÁCH HÀNG" />
                <Label layoutX="30.0" layoutY="60.0" text="Họ tên khách hàng:" />
                <TextField fx:id="txtTenKhachHang" layoutX="170.0" layoutY="54.0" prefHeight="27.0" prefWidth="140.0" />
                <Button fx:id="btnTimKhachHang" layoutX="320.0" layoutY="54.0" onAction="#handleTimKhachHang" prefHeight="27.0" prefWidth="40.0" text="Tìm" />

                <Label layoutX="30.0" layoutY="100.0" text="Số điện thoại:" />
                <TextField fx:id="txtSoDienThoai" layoutX="170.0" layoutY="94.0" prefWidth="140.0" />

                <Label layoutX="30.0" layoutY="177.0" text="Nhập mã đơn thuốc:" />
                <TextField fx:id="txtMaDonThuoc" layoutX="170.0" layoutY="171.0" prefWidth="140.0" />

                <Label layoutX="30.0" layoutY="220.0" text="Ngày kê đơn:" />
                <DatePicker fx:id="dpNgayKeDon" layoutX="170.0" layoutY="214.0" prefWidth="140.0" />

                <Label layoutX="30.0" layoutY="270.0" text="Tổng chiết khấu:" />
                <Label fx:id="lblChietKhauValue" layoutX="170.0" layoutY="270.0" styleClass="value-label" text="0 VNĐ" />

                <Label layoutX="30.0" layoutY="310.0" text="Tổng tiền:" />
                <Label fx:id="lblTongTienValue" layoutX="170.0" layoutY="310.0" styleClass="value-label" text="0 VNĐ" />

                <Label layoutX="30.0" layoutY="350.0" text="Thuế (VAT 5%):" />
                <Label fx:id="lblVATValue" layoutX="170.0" layoutY="350.0" styleClass="value-label" text="0 VNĐ" />

                <Label layoutX="30.0" layoutY="400.0" styleClass="bold-label" text="Thành tiền:" />
                <Label fx:id="lblThanhTienValue" layoutX="170.0" layoutY="400.0" styleClass="main-value-label" text="0 VNĐ" />

                <Label layoutX="30.0" layoutY="450.0" text="Phương thức thanh toán:" />
                <ChoiceBox fx:id="cbPhuongThucTT" layoutX="170.0" layoutY="444.0" prefWidth="140.0" />

                <Pane fx:id="paneTienMat" layoutX="0" layoutY="480" prefHeight="80.0" prefWidth="368.0">
                    <children>
                        <Label layoutX="30.0" layoutY="10.0" text="Số tiền khách đưa:" />
                        <TextField fx:id="txtSoTienKhachDua" layoutX="170.0" layoutY="4.0" prefWidth="140.0" />
                        <Label layoutX="30.0" layoutY="40.0" text="Tiền thừa:" />
                        <Label fx:id="lblTienThuaValue" layoutX="170.0" layoutY="40.0" styleClass="value-label" text="0 VNĐ" />
                    </children>
                </Pane>

                <Button fx:id="btnDatHang" layoutX="54.0" layoutY="586.0" prefHeight="44.0" prefWidth="120.0" styleClass="print-btn" text="In hóa đơn">
                    <font>
                        <Font size="13.0" />
                    </font>
                </Button>
                <Button fx:id="btnThanhToan" layoutX="194.0" layoutY="586.0" prefHeight="44.0" prefWidth="120.0" styleClass="success-btn" text="Thanh toán">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                </Button>
            </children>
        </Pane>
    </children>
</AnchorPane>
